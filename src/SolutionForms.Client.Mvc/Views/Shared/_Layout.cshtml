@using SolutionForms.Client.Mvc.Helpers

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Solution Forms Beta</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon"/>
  <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
  <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
        asp-fallback-href="~/css/bootstrap.css"
        asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
  <link href="~/css/font-awesome.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css"
        asp-fallback-href="~/css/jquery-ui-all.min.css"
        asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute">

  <environment names="Development">
  </environment>
  <environment names="Staging,Production">
  </environment>
</head>
<body class="no-print">
  <div class="navbar navbar-inverse navbar-fixed-top no-print">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a asp-controller="Home" asp-action="Index" class="navbar-brand">SolutionForms Beta</a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a asp-controller="Home" asp-action="Index">Home</a></li>
          <li><a asp-controller="Admin" asp-action="Index">Admin</a></li>
        </ul>
        @await Html.PartialAsync("_LoginPartial")
      </div>
    </div>
  </div>
  <div class="body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; 2016 - Solutionhead Technologies, LLC</p>
    </footer>
  </div>

<script src="~/js/build/core.bundle.js?@ScriptHelpers.VersionQueryStringParam"></script>
<script>
  //shell scripts
  ko.validation.init({
    insertMessages: false,
    decorateInputElement: true,
    errorElementClass: 'has-error'
  });
</script>
  @RenderSection("scripts", required: false)
</body>
</html>

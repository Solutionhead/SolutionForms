@model SolutionForms.Client.Mvc.ViewModels.DataForms.DataFormsIndexViewModel
@{
    ViewData["Title"] = "My Forms";
}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div>
  <div class="bg-info">
    <ul>
      <li>@Html.ActionLink("Create new form", "New", "Dataforms")</li>
    </ul>
  </div>

  <ul>
    @foreach (var item in Model.Forms)
    {
        <li>
          <a href="@item.Url">@item.Title</a>
        </li>
    }
  </ul>
</div>
@model TenantLoginViewModel

@{
  ViewData["Title"] = "";
}

<div class="row">
  <div class="col-md-8">
    <section>
      <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
      <form method="POST" class="form-horizontal" asp-controller="Account" asp-action="LoginTenant">
        <div>Enter your organization's <strong>Solution Forms domain.</strong>
        </div>
        <input id="domain" asp-for="TenantDomain"/>
        <button type="submit" class="btn btn-default">Continue</button>
      </form>
    </section>
  </div>
</div>


@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

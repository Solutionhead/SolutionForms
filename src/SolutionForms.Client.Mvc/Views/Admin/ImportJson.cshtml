@model ImportJsonViewModel

@{
    ViewData["Title"] = "Import JSON Data";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Admin" asp-action="ImportJson" method="post" class="form-horizontal">
  @if (Model != null && !string.IsNullOrWhiteSpace(ViewBag.Message))
  {
  <p class="bg-primary message">@Html.Raw(ViewBag.Message)</p>
  }
  <div asp-validation-summary="All" class="bg-info message"></div>

  <div class="form-group">
    <label asp-for="EntityName" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="EntityName" class="form-control" />
      <span asp-validation-for="EntityName" class="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <label asp-for="JsonData" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <textarea asp-for="JsonData" class="form-control"></textarea>
      <span asp-validation-for="JsonData" class="text-danger"></span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <button type="submit" class="btn btn-default">Import Data</button>
    </div>
  </div>

  @Html.AntiForgeryToken()
</form>


@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}